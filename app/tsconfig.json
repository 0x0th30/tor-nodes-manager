{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],
    "rootDirs": [
      "src",
      "tests"
    ],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@providers/*": ["src/providers/*"],
      "@middlewares/*": ["src/api/middlewares/*"],
      "@routes/*": ["src/api/routes/*"],
      "@config/*": ["src/config/*"],
      "@loaders/*": ["src/loaders/*"],
      "@models/*": ["src/models/*"],
      "@use-cases/*": ["src/use-cases/*"],
      "@contracts/*": ["src/contracts/*"],
      "@entities/*": ["src/contracts/*"],
      "@errors/*": ["src/errors/*"],
      "@types/*": ["src/types/*"],
      "@mocks/*": ["tests/mocks/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}